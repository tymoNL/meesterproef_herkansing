<section id="sectionPin">
    
    <div class="pin-wrap-sticky">
        <div class="pin-wrap">
            
            <div class="introtekst" tapindex="1">
              
                <h2>{{ item.straat }} {{ item.huisnummer }}  </h2>
                <h3>{{ item.naam }}</h3>
            </div>
            {% for tekst in item.verhalen %}
            <div class="img">

                {% comment %} <p style="color:white;">{{ item | json }}</p> {% endcomment %}


                
                {% comment %} <img src="/images/jacob.png" alt="foto van Jacob Philips"> {% endcomment %}
                <div class="imgContent" tabindex="0">
                    {% if tekst.afbeelding %}
                        <img src="{{ tekst.afbeelding }}" alt="{{ tekst.titel }}" class="verhaalImage">
                    {% else %}
                    {% endif %}
                    <h2>{{ tekst.titel }} <br> {{ tekst.datum }} </h2>
                    <p>{{ tekst.tekst }}</p>
                </div>
                </div>
            {% endfor %}
            

    
        </div>
    </div>



</section>









{% endblock %} 




{% comment %} {% layout "server/layouts/base.liquid" %}

{% block content %}
<section class="voorbeeld">
    <h1>{{ item.titel }}</h1>
    <p><strong>Naam:</strong> {{ item.naam }}</p>
    <p><strong>Geboren:</strong> {{ item.geboortedatum }}</p>
    <p><strong>Overleden:</strong> {{ item.overleidingsdatum }}</p>

    <h2>Verhaal</h2>

    <div>
        {% for tekst in item.verhalen %}
        <article class="stop" tabindex="0">
            <div class="text">
                <header>
                    <h2>{{ tekst.titel }}</h2>
                    <time>{{ tekst.date }}</time>
                </header>
                <p>{{ tekst.tekst }}</p>
                {% if item.image %}
                <img src="{{ tekst.afbeelding }}" alt="{{ tekst.titel }}" />
                {% endif %}
            </div>
        </article>
        {% endfor %}
    </div>
</section>
{% endblock %} {% endcomment %}